<% if (title) { %>
  <h1><%= title %></h1>
<% } %>

<% if (message) { %>
  <p class="notice"><%= message %></p>
<% } %>

<section class="form-section">
  <form action="/inv/add-classification" method="post" class="inv-form">
    <div class="form-field">
      <label for="classification_name">Classification Name</label>
      <p class="hint">
        Letters and numbers only. <strong>No spaces or special characters.</strong>
      </p>
      <input
        type="text"
        id="classification_name"
        name="classification_name"
        pattern="^[A-Za-z0-9]+$"
        required
        value="<%= classification_name || '' %>"
      >
    </div>

    <button type="submit" class="btn">Add Classification</button>
  </form>
</section>
